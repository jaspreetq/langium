statemachine TrafficLight

events 
    switchCapacity
    next

attributes 
    u = 1
    cnt = 12 - (2 > u)

initialState PowerOff

state PowerOff
    switchCapacity => RedLight
end

state RedLight
    switchCapacity when 2 > 10 => PowerOff      
    next => GreenLight
end

state YellowLight
    switchCapacity => PowerOff
    next => RedLight
end

state GreenLight
    switchCapacity => PowerOff
    next => YellowLight
end