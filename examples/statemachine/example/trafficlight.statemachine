statemachine TrafficLight

events 
    switchCapacity
    next

attributes 
    cnt = 12-((12+10)/5)
    u = 1
initialState PowerOff

state PowerOff
    switchCapacity => RedLight
end

state RedLight
    switchCapacity => PowerOff
    next => GreenLight
end

state YellowLight
    switchCapacity => PowerOff
    next => RedLight
end

state GreenLight
    switchCapacity => PowerOff
    next => YellowLight
end