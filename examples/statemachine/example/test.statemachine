statemachine TrafficLight

events 
    switchCapacity
    next
commands
    printExt
    testCommand

attributes
    cnt : int = 89
    isEmpty : bool = cnt > 10 || cnt < 20 -7
    checkDefault : bool

initialState PowerOff

state PowerOff
    switchCapacity when true => RedLight 
    with 
        print(10)
    end
end

state RedLight
    switchCapacity => PowerOff end
    next => GreenLight end
end

state YellowLight
    switchCapacity => PowerOff end
    next => RedLight end
end

state GreenLight
    switchCapacity => PowerOff end
    next => YellowLight end
end