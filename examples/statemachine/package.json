{
    "name": "langium-statemachine-dsl",
    "displayName": "State Machine DSL",
    "version": "3.1.0",
    "description": "Example language built with Langium Further optimized to incorporate features like transitions guards, attributes and action language.",
    "homepage": "https://langium.org",
    "engines": {
        "vscode": "^1.67.0"
    },
    "license": "MIT",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "statemachine",
                "aliases": [
                    "Statemachine",
                    "statemachine"
                ],
                "extensions": [
                    ".statemachine"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "statemachine",
                "scopeName": "source.statemachine",
                "path": "./syntaxes/statemachine.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:statemachine"
    ],
    "files": [
        "bin",
        "out",
        "src",
        "syntaxes",
        "language-configuration.json"
    ],
    "bin": {
        "statemachine-cli": "./bin/cli.js"
    },
    "type": "module",
    "main": "./out/extension.cjs",
    "scripts": {
        "build": "node esbuild.mjs",
        "watch": "node esbuild.mjs --watch",
        "lint": "eslint src test --ext ts",
        "langium:generate": "langium generate",
        "publish:next": "npm --no-git-tag-version version \"$(semver $npm_package_version -i minor)-next.$(git rev-parse --short HEAD)\" && npm publish --tag next",
        "publish:latest": "npm publish --tag latest --access public",
        "build:worker": "esbuild --minify ./out/language-server/main-browser.js --bundle --format=iife --outfile=./public/statemachine-server-worker.js",
        "serve": "node ./out/web/app.js",
        "prepare:public": "node scripts/prepare-public.mjs",
        "build:web": "npm run build && npm run prepare:public && npm run build:worker && node scripts/copy-monaco-assets.mjs"
    },
    "dependencies": {
        "chalk": "~5.3.0",
        "commander": "~11.0.0",
        "langium": "~3.1.0",
        "monaco-editor-workers": "^0.45.0",
        "monaco-editor-wrapper": "~4.0.1",
        "vscode-jsonrpc": "~8.2.0",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1",
        "vscode-languageserver-protocol": "~3.17.5",
        "vscode-languageserver-types": "~3.17.5"
    },
    "devDependencies": {
        "@types/node": "^20.14.9",
        "langium-cli": "~3.1.0"
    },
    "volta": {
        "node": "18.19.1",
        "npm": "10.2.4"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/eclipse-langium/langium",
        "directory": "examples/statemachine"
    },
    "bugs": "https://github.com/eclipse-langium/langium/issues",
    "author": {
        "name": "TypeFox",
        "url": "https://www.typefox.io"
    }
}
